<p class="save-heading">Enter a name for the virtual data center manifest.<p>

<%= form_for @manifest, url: { action: "create" }, remote: true, html: { id: "save-manifest", class: "form-horizontal center", role: "form" } do |f| %>
  <ul id="save-errors"></ul>

  <%= f.hidden_field :configuration, @component_json %>

  <div class="form-group">
    <%= f.label :name, "Name:", class: "control-label col-sm-2" %>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>
<%- end %>
