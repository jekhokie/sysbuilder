<div class="assigned-component <%= "first-component" if instance == 0 %>" data-tag="<%= tag_value %>">
  <%= hidden_field_tag "component_json[manifest][#{category}][#{instance}]name", name %>
  <%= hidden_field_tag "component_json[manifest][#{category}][#{instance}]tag", tag_value %>

  <span class="component-name"><%= name %></span>

  <button class="btn btn-xs btn-danger component-destroy">
    <span class="glyphicon glyphicon-trash"></span>
  </button>

  <span class="component-vresource">
    <%= label_tag  "component_json[manifest][#{category}][#{instance}]vresource", "VResource:" %>
    <%= select_tag "component_json[manifest][#{category}][#{instance}]vresource",
                   options_for_select(compute_resources, selected: vresource),
                   :class => 'provider-compute-resources' %>
  </span>

  <span class="component-version">
    <%= label_tag  "component_json[manifest][#{category}][#{instance}]version", "Version:" %>
    <%= select_tag "component_json[manifest][#{category}][#{instance}]version",
                   options_for_select(versions, selected: version),
                   :class => "component-version-select" %>
  </span>
</div>
